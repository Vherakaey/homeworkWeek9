{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Area of current Forests",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/Vherakaey/homeworkWeek9/main/map.topojson",
    "format": {
          "type": "topojson",
          "feature": "map"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Vherakaey/homeworkWeek9/main/forest.csv"
        },
        "key": "Entity",
        "fields": ["Area"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Area",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Area", "type": "quantitative"}
    ]
  }

}
